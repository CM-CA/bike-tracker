---
import "./src/styles/global.css";
interface Props {
  title?: string;
}

import { SignedIn, SignedOut, UserButton, SignInButton } from '@clerk/astro/components'

const { title = "Bike Tracker" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Tackeador de bicicletas robadas o perdidas"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-gray-50 font-sans pt-20">
    <nav class="fixed top-0 left-0 right-0 z-50 bg-white shadow-sm">
      <div class="container mx-auto px-4 py-4 flex justify-between items-center">
        <div class="text-2xl font-bold text-gray-800 flex items-center">
          <svg class="w-8 h-8 mr-2 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 9.586 14.586 6H12z" clip-rule="evenodd"/>
          </svg>
          Bike Tracker
        </div>
        <div class="space-x-4">
          <SignedOut>
            <SignInButton 
              mode="modal" 
              appearance={{
                elements: {
                  rootBox: 'transition-all duration-300 hover:scale-105',
                  card: 'bg-white shadow-xl rounded-lg'
                }
              }}
              class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors"
            >
              Iniciar Sesi√≥n
            </SignInButton>
          </SignedOut>
          <SignedIn>
            <UserButton 
              appearance={{
                elements: {
                  userButtonAvatarBox: 'border-2 border-blue-500'
                }
              }}
            />
          </SignedIn>
        </div>
      </div>
    </nav>

    <main class="flex-grow pt-20">
      <section
        class="hero bg-white min-h-[50vh] flex items-center justify-center text-center"
      >
        <div class="container mx-auto px-4">
          <h1 class="text-5xl font-bold text-gray-800 mb-4">
            Explora las bicicletas robadas o perdidas
          </h1>
          <p class="text-xl text-gray-600 mb-8">
            Ayudanos a encontrar bicicletas robadas en la comunidad
          </p>
          <div class="max-w-xl mx-auto">
            <input
              type="text"
              placeholder="Buscar bicicletas..."
              class="w-full px-4 py-3 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all"
            />
          </div>
        </div>
      </section>

      <section class="container mx-auto px-4 py-12">
        <slot />
      </section>
    </main>

    <footer class="bg-gray-100 py-12">
      <div class="container mx-auto px-4 text-center">
        <p class="text-gray-600">
          2025 Bike Tracker. Todos los derechos reservados.
        </p>
        <div class="mt-4 space-x-4">
          <a href="#" class="text-gray-500 hover:text-gray-800">GitHub</a>
          <a href="#" class="text-gray-500 hover:text-gray-800">Twitter</a>
          <a href="#" class="text-gray-500 hover:text-gray-800">LinkedIn</a>
        </div>
      </div>
    </footer>
  </body>
  <script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
</html>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
