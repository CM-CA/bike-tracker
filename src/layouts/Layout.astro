---
import "./src/styles/global.css";
interface Props {
  title?: string;
}

const { title = "Bike Tracker" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Tackeador de bicicletas robadas o perdidas"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-gray-50 font-sans">
    <nav class="fixed top-0 left-0 right-0 z-50 bg-white shadow-sm">
      <div
        class="container mx-auto px-4 py-4 flex justify-between items-center"
      >
        <div class="text-2xl font-bold text-gray-800">Bike Tracker</div>
        <div class="space-x-4">
          <a
            href="/"
            class="text-gray-600 hover:text-gray-900 transition-colors"
            >Inicio</a
          >
          <a
            href="/showcase"
            class="text-gray-600 hover:text-gray-900 transition-colors"
            >Componentes</a
          >
          <a
            href="#"
            class="text-gray-600 hover:text-gray-900 transition-colors"
            >Documentaci√≥n</a
          >
        </div>
      </div>
    </nav>

    <main class="flex-grow pt-20">
      <section
        class="hero bg-white min-h-[50vh] flex items-center justify-center text-center"
      >
        <div class="container mx-auto px-4">
          <h1 class="text-5xl font-bold text-gray-800 mb-4">
            Explora las bicicletas robadas o perdidas
          </h1>
          <p class="text-xl text-gray-600 mb-8">
            Ayudanos a encontrar bicicletas robadas en la comunidad
          </p>
          <div class="max-w-xl mx-auto">
            <input
              type="text"
              placeholder="Buscar bicicletas..."
              class="w-full px-4 py-3 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all"
            />
          </div>
        </div>
      </section>

      <section class="container mx-auto px-4 py-12">
        <slot />
      </section>
    </main>

    <footer class="bg-gray-100 py-12">
      <div class="container mx-auto px-4 text-center">
        <p class="text-gray-600">
          2025 Bike Tracker. Todos los derechos reservados.
        </p>
        <div class="mt-4 space-x-4">
          <a href="#" class="text-gray-500 hover:text-gray-800">GitHub</a>
          <a href="#" class="text-gray-500 hover:text-gray-800">Twitter</a>
          <a href="#" class="text-gray-500 hover:text-gray-800">LinkedIn</a>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
